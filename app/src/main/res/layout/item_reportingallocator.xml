<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="position"
            type="Integer" />

        <variable
            name="itemData"
            type="com.pms.rcuapp.model.getverificationDetailResponse.GetAllocator" />

        <variable
            name="holder"
            type="com.pms.rcuapp.view.adapter.ReportingAllocatorViewHolder" />

        <variable
            name="viewmodel"
            type="com.pms.rcuapp.viewmodel.verificationDetail.BasicInformationViewModel"/>
    </data>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:layout_marginRight="@dimen/_5ssp"
        android:layout_marginLeft="@dimen/_5ssp"
        android:layout_marginTop="@dimen/_5sdp"
        app:cardBackgroundColor="@color/white"
        card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_Header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="MissingConstraints"
                android:orientation="vertical"
                android:padding="8sp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:ignore="ExtraText">

                    <com.pms.rcuapp.widget.HeaderText
                        android:id="@+id/txtApplicateName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        android:gravity="center_vertical"
                        android:visibility="visible"
                        android:textColor="@color/black2"
                        android:drawableStart="@drawable/icon_user"
                        android:drawableTint="@color/black2"
                        android:drawablePadding="3sp"
                        android:textSize="14sp"
                        tools:ignore="MissingConstraints">
                    </com.pms.rcuapp.widget.HeaderText>
                    <com.pms.rcuapp.widget.SmallText
                        android:id="@+id/txtCaseNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:visibility="visible"
                        android:layout_gravity="end"
                        android:layout_weight="1.6"
                        android:textColor="@color/gray_323232"
                        android:drawablePadding="3sp"
                        android:textSize="12sp"
                        tools:ignore="MissingConstraints">
                    </com.pms.rcuapp.widget.SmallText>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    tools:ignore="ExtraText">

                    <com.pms.rcuapp.widget.HeaderText
                        android:id="@+id/txtApplicateMobileNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        android:gravity="center_vertical"
                        android:visibility="visible"
                        android:textColor="@color/black2"
                        android:drawableTint="@color/black2"
                        android:drawablePadding="3sp"
                        android:textSize="14sp"
                        android:drawableStart="@drawable/icon_call"
                        tools:ignore="MissingConstraints">
                    </com.pms.rcuapp.widget.HeaderText>
                    <com.pms.rcuapp.widget.SmallText
                        android:id="@+id/txtMobileNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:visibility="visible"
                        android:layout_gravity="end"
                        android:layout_weight="1.6"
                        android:textColor="@color/gray_323232"
                        android:drawablePadding="3sp"
                        android:textSize="12sp"
                        tools:ignore="MissingConstraints">
                    </com.pms.rcuapp.widget.SmallText>
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>